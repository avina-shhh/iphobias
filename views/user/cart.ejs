	<form class="bg0 p-t-75 p-b-85">
		<div class="container">
			<div class="row">
				<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
					<div class="m-l-25 m-r--38 m-lr-0-xl">
						<div class="wrap-table-shopping-cart">
							<table class="table-shopping-cart">
								<tr class="table_head">
									<th class="column-1">Product</th>
									<th class="column-2"></th>
									<th class="column-3">Price</th>
									<th class="column-4">Quantity</th>
									<th class="column-5">Total</th>
								</tr>

								<tbody>
									<% if (cart && cart.items.length > 0) { %>
										<% cart.items.forEach(function(item, idx) { %>
											<tr class="table_row" data-item-id="<%= item._id %>">
												<td class="column-1" style="position:relative;">
													<div class="how-itemcart1">
														<img src="/uploads/productimg/<%= item.productId.productImage[0] %>" alt="IMG">
													</div>
													<!-- Button container at bottom left -->
													<div style="position:absolute; left:45px; bottom:20px; display:flex; gap:6px; z-index:2;">
														<button type="button" class="btn btn-outline-danger btn-sm btn-remove-item" title="Remove">
															Remove
														</button>
													</div>
												</td>
												<td class="column-2"><%= item.productId.productName %></td>
												<td class="column-3">₹<%= item.price %></td>
												<td class="column-4">
													<div class="wrap-num-product flex-w m-l-auto m-r-0">
														<div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
															<i class="fs-16 zmdi zmdi-minus"></i>
														</div>
														<input class="mtext-104 cl3 txt-center num-product" type="number" min="1" value="<%= item.quantity %>" data-original="<%= item.quantity %>">
														<div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
															<i class="fs-16 zmdi zmdi-plus"></i>
														</div>
													</div>
												</td>
												<td class="column-5">₹<%= item.totalPrice %></td>
											</tr>
										<% }); %>
									<% } else { %>
										<tr>
											<td colspan="5" class="text-center py-5">
												<div class="d-flex flex-column align-items-center justify-content-center">
													<i class="zmdi zmdi-shopping-cart" style="font-size: 48px; color: #888; margin-bottom: 15px;"></i>
													<h4 class="text-muted mb-3">Your cart is empty</h4>
													<p class="text-muted mb-4">Looks like you haven't added any items to your cart yet.</p>
													<a href="/shop" class="btn btn-outline-success">
														Continue Shopping
													</a>
												</div>
											</td>
										</tr>
									<% } %>
								</tbody>
							</table>
						</div>

						<div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
							<div class="flex-w flex-m m-r-20 m-tb-5">
								<input class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text" name="coupon" placeholder="Coupon Code">
									
