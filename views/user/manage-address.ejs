document.addEventListener("DOMContentLoaded", function () {
    const validateForm = (formData) => {
        const errors = [];

        // Validate Name
        if (!formData.name.trim()) {
            errors.push("Name is required.");
        }

        // Validate Phone
        if (!/^\d{10}$/.test(formData.phone)) {
            errors.push("Phone must be exactly 10 digits.");
        }

        // Validate AltPhone (if provided)
        if (formData.altPhone && !/^\d{10}$/.test(formData.altPhone)) {
            errors.push("Alternate Phone must be exactly 10 digits.");
        }

        // Ensure AltPhone is not equal to Phone
        if (formData.altPhone && formData.altPhone === formData.phone) {
            errors.push("Alternate Phone must not be the same as Phone.");
        }

        // Validate Address
        if (!formData.address.trim()) {
            errors.push("Address is required.");
        }

        // Validate Locality
        if (!formData.locality.trim()) {
            errors.push("Locality is required.");
        }

        // Validate City
        if (!formData.city.trim()) {
            errors.push("City is required.");
        }

        // Validate State
        if (!formData.state.trim()) {
            errors.push("State is required.");
        }

        // Validate Pincode
        if (!/^\d{6}$/.test(formData.pincode)) {
            errors.push("Pincode must be exactly 6 digits.");
        }

        return errors;
    };

    // Handle Add Address Form Submission
    const addAddressForm = document.querySelector("#addAddressForm");
    if (addAddressForm) {
        addAddressForm.addEventListener("submit", async function (event) {
            event.preventDefault();

            const formData = {
                name: document.getElementById("name").value,
                phone: document.getElementById("phone").value,
                address: document.getElementById("address").value,
                city: document.getElementById("city").value,
                state: document.getElementById("state").value,
                pincode: document.getElementById("pincode").value,
                locality: document.getElementById("locality").value,
                landMark: document.getElementById("landmark")?.value || "",
                altPhone: document.getElementById("altPhone")?.value || "",
                addressType: document.querySelector('input[name="addressType"]:checked').value,
            };

            const errors = validateForm(formData);
            if (errors.length > 0) {
                Swal.fire("Validation Error", errors.join("<br>"), "error");
                return;
            }

            try {
                const response = await fetch("/add-address", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify(formData),
                });

                const result = await response.json();
                if (result.success) {
                    Swal.fire("Success", "Address added successfully!", "success").then(() => {
                        location.reload(); // Reload the page to reflect the new address
                    });
                } else {
                    Swal.fire("Error", result.message || "Failed to add address.", "error");
                }
            } catch (error) {
                console.error("Error adding address:", error);
                Swal.fire("Error", "An error occurred while adding the address.", "error");
            }
        });
    }

    // Handle Edit Address Form Submission
    document.querySelectorAll(".editAddressForm").forEach((form, index) => {
        form.addEventListener("submit", async function (event) {
            event.preventDefault();

            const formData = {
                addressId: form.querySelector("input[name='addressId']").value,
                name: form.querySelector("input[name='name']").value,
                phone: form.querySelector("input[name='phone']").value,
                address: form.querySelector("textarea[name='address']").value,
                city: form.querySelector("input[name='city']").value,
                state: form.querySelector("input[name='state']").value,
                pincode: form.querySelector("input[name='pincode']").value,
                locality: form.querySelector("input[name='locality']").value,
                landMark: form.querySelector("input[name='landMark']").value || "",
                altPhone: form.querySelector("input[name='altPhone']").value || "",
                addressType: form.querySelector(`input[name="addressType${index}"]:checked`).value,
            };

            const errors = validateForm(formData);
            if (errors.length > 0) {
                Swal.fire("Validation Error", errors.join("<br>"), "error");
                return;
            }

            try {
                const response = await fetch(`/edit-address`, {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify(formData),
                });

                const result = await response.json();
                if (result.success) {
                    Swal.fire("Success", "Address updated successfully!", "success").then(() => {
                        location.reload(); // Reload the page to reflect the updated address
                    });
                } else {
                    Swal.fire("Error", result.message || "Failed to update address.", "error");
                }
            } catch (error) {
                console.error("Error updating address:", error);
                Swal.fire("Error", "An error occurred while updating the address.", "error");
            }
        });
    });
});

document.addEventListener("DOMContentLoaded", function () {
    const deleteAddressBtns = document.querySelectorAll(".delete-address-btn");

    deleteAddressBtns.forEach((deleteBtn) => {
        deleteBtn.addEventListener("click", function (event) {
            event.preventDefault();

            const addressId = deleteBtn.getAttribute("data-address-id");

            Swal.fire({
                title: "Are you sure?",
                text: "This action will delete the address and cannot be undone.",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#d33",
                cancelButtonColor: "#3085d6",
                confirmButtonText: "Yes",
                cancelButtonText: "Cancel",
            }).then((result) => {
                if (result.isConfirmed) {
                    // Send a DELETE request to the server
                    fetch(`/delete-address`, {
                        method: "DELETE",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify({ addressId }),
                    })
                        .then((response) => response.json())
                        .then((data) => {
                            if (data.success) {
                                Swal.fire({
                                    icon: "success",
                                    title: "Deleted!",
                                    text: "The address has been deleted.",
                                    showConfirmButton: false,
                                    timer: 2000,
                                }).then(() => {
