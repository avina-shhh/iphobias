    <script>
        document.getElementById('brandForm').addEventListener('submit',async function (event) {

          event.preventDefault();
          
          // Get form fields
          const brandName = document.getElementById('brandName').value.trim();
          const brandLogo = document.getElementById('realLogo').files[0];
          
          // Get error message elements
          const nameError = document.getElementById('name-error');
          const logoError = document.getElementById('logo-error');
          
          // Reset error messages
          nameError.textContent = '';
          logoError.textContent = '';
          
          // Validate Brand Name
          if (!brandName) {
            nameError.textContent = '*Please enter the brand name.';
            return;
          }
          
          // Validate Brand Logo
          if (!brandLogo) {
            logoError.textContent = '*Please insert a logo.';
            return;
          }

          const formData = new FormData(this);

          try {
            
            const response = await fetch('/admin/addBrand', {
              method: 'POST',
              body: formData, // Send form data
            });

            const result = await response.json();
            
            if (result.status) {
              // Show success SweetAlert
              Swal.fire({
                icon: 'success',
                title: 'Success',
                text: result.message,
              }).then(() => {
                window.location.href = '/admin/brands'; // Redirect after success
              });
            }else{
              // Show error SweetAlert
              Swal.fire({
                icon: 'error',
                title: 'Error',
                text: result.message,
              });
            }


          } catch (error) {
            console.error('Error submitting form:', error);
            Swal.fire({
              icon: 'error',
              title: 'Error',
              text: 'An error occurred while submitting the form.',
            });
          }


        });

        document.getElementById('fileUpload').addEventListener('click', function () {
            document.getElementById('realLogo').click(); // Trigger file input
        });

        document.getElementById('realLogo').addEventListener('change', function () {
            const fileName = this.files[0] ? this.files[0].name : 'No file chosen';
            document.getElementById('brandLogoShow').value = fileName; // Display file name
        });


        async function confirmBlockBrand(brandId) {
          // Show SweetAlert confirmation
          Swal.fire({
            title: 'Are you sure?',
            text: 'You are about to block this brand.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes',
            cancelButtonText: 'Cancel',
          }).then(async (result) => {
            if (result.isConfirmed) {
              try {
                // Send a request to block the brand
                const response = await fetch(`/admin/blockBrand?id=${brandId}`, {
                  method: 'GET', // or 'GET', depending on your backend route
                });
              
                const result = await response.json(); // Parse the JSON response
              
                if (result.status) {
                  // Show success SweetAlert
                  Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: result.message, // Display the message from the backend
                  }).then(()=>{
                    window.location.href = "/admin/brands"
                  });
                } else {
                  // Show error SweetAlert
                  Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: result.message, // Display the error message from the backend
                  });
                }
              } catch (error) {
                console.error('Error blocking brand:', error);
                Swal.fire({
                  icon: 'error',
                  title: 'Error',
                  text: 'An error occurred while blocking the brand.',
                });
              }
            }
          });
        }

        async function confirmDeleteBrand(brandId) {
          // Show SweetAlert confirmation
          Swal.fire({
            title: 'Are you sure?',
            text: 'You are about to remove this brand. This action cannot be undone.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes',
            cancelButtonText: 'Cancel',
          }).then(async (result) => {
            if (result.isConfirmed) {
              try {
                // Send a request to block the brand
                const response = await fetch(`/admin/deleteBrand?id=${brandId}`, {
                  method: 'GET', // or 'GET', depending on your backend route
                });
              
                const result = await response.json(); // Parse the JSON response
              
