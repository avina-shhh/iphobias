    <script>
      let cropper;
    let currentInput;
    let croppedImages = [];

    function validateNumber(input) {
      let value = input.value.replace(/[^0-9]/g, '');
      value = value.replace(/^0+/, '');
      if (value === '') {
        value = '0';
      }
      if (value.startsWith('00')) {
        value = '0';
      }
      input.value = value;
    }

    function handleFileInputChange(input) {
      const file = input.files[0];
      currentInput = input;

      if (file) {
        const reader = new FileReader();
        reader.onload = function (e) {
          const imageToCrop = document.getElementById('imageToCrop');
          imageToCrop.src = e.target.result;
          $('#cropperModal').modal('show');
        };
        reader.readAsDataURL(file);
      }
    }

    document.addEventListener('DOMContentLoaded', function () {
      const container = document.getElementById('imageUploadContainer');
      const addMoreImagesBtn = document.getElementById('addMoreImagesBtn');

      container.addEventListener('click', function (event) {
        if (event.target.classList.contains('file-upload-browse')) {
          triggerFileInput(event.target);
        }
      });

      container.addEventListener('change', function (event) {
        if (event.target.type === 'file') {
          handleFileInputChange(event.target);
        }
      });

      addMoreImagesBtn.addEventListener('click', addMoreImages);

      $('#cropperModal').on('shown.bs.modal', function () {
        const imageToCrop = document.getElementById('imageToCrop');
        cropper = new Cropper(imageToCrop, {
          aspectRatio: 1,
          viewMode: 1,
        });
      }).on('hidden.bs.modal', function () {
        cropper.destroy();
        cropper = null;
      });

      document.getElementById('cropImageBtn').addEventListener('click', function () {
        const canvas = cropper.getCroppedCanvas();
        const previewContainer = currentInput.closest('.col-md-6').querySelector('.image-preview');
        canvas.toBlob(function (blob) {
          const url = URL.createObjectURL(blob);
          previewContainer.innerHTML = `<img src="${url}" class="img-fluid">`;
          const displayInput = currentInput.closest('.input-group').querySelector('input[type="text"][disabled]');
          displayInput.value = currentInput.files[0].name;
          croppedImages.push({ blob, fileName: currentInput.files[0].name });
          currentInput.value = ''; // Clear the original file input to prevent uploading the original file
          $('#cropperModal').modal('hide');
        });
      });
    });

