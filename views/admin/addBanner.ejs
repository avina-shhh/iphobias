    <script>

let cropper;
    let currentInput;
    let croppedImage = null;

    function handleFileInputChange(input) {
        const file = input.files[0];
        currentInput = input;

        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                const imageToCrop = document.getElementById('imageToCrop');
                imageToCrop.src = e.target.result;
                $('#cropperModal').modal('show');
            };
            reader.readAsDataURL(file);
        }
    }

    document.addEventListener('DOMContentLoaded', function () {
        const fileUploadButton = document.getElementById('fileUpload');
        const fileInput = document.getElementById('banner');

        fileUploadButton.addEventListener('click', function () {
            fileInput.click();
        });

        fileInput.addEventListener('change', function () {
            handleFileInputChange(fileInput);
        });

        $('#cropperModal').on('shown.bs.modal', function () {
          const imageToCrop = document.getElementById('imageToCrop');
          cropper = new Cropper(imageToCrop, {
            aspectRatio: 1920 / 930,
            viewMode: 1,
          });
        }).on('hidden.bs.modal', function () {
            cropper.destroy();
            cropper = null;
        });

        document.getElementById('cropImageBtn').addEventListener('click', function () {
            const canvas = cropper.getCroppedCanvas();
            canvas.toBlob(function (blob) {
                const url = URL.createObjectURL(blob);
                const displayInput = document.getElementById('bannerShow');
                displayInput.value = currentInput.files[0].name;
                croppedImage = { blob, fileName: currentInput.files[0].name };
                currentInput.value = ''; // Clear the original file input
                $('#cropperModal').modal('hide');
            });
        });
    });

    function validateBannerForm() {
        clearErrorMessages();
        const title = document.getElementById('bannerTitle').value;
        const description = document.getElementById('description').value;
        const startDate = document.getElementById('startDate').value;
        const endDate = document.getElementById('endDate').value;
        const link = document.getElementById('link').value;
        let isValid = true;

        if (title.trim() === "") {
            displayErrorMessage('name-error', 'Please enter a banner title.');
            isValid = false;
        }

        if (description.trim() === "") {
            displayErrorMessage('description-error', 'Please enter a description.');
            isValid = false;
        }

        if (startDate === "") {
            displayErrorMessage('startdate-error', 'Please select a start date.');
            isValid = false;
        }

        if (endDate === "") {
            displayErrorMessage('enddate-error', 'Please select an end date.');
            isValid = false;
        }

        if (link.trim() === "") {
            displayErrorMessage('link-error', 'Please enter a link.');
            isValid = false;
        }

        if (!croppedImage) {
            displayErrorMessage('images-error', 'Please upload a banner image.');
            isValid = false;
        }

        return isValid;
    }

    async function validateAndSubmitBannerForm(event) {
        event.preventDefault();
        if (validateBannerForm()) {
            const formData = new FormData(event.target);
            formData.append('image', croppedImage.blob, croppedImage.fileName); // Correctly append the image

            try {
                const response = await fetch(event.target.action, {
                    method: 'POST',
                    body: formData,
                });

                const result = await response.json();

                if (result.status) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: result.message,
                        customClass: {
                            container: 'swal2-container',
                            popup: 'swal2-popup',
                            title: 'swal2-title',
                            confirmButton: 'swal2-confirm',
                            cancelButton: 'swal2-cancel',
                        }
                    }).then(() => {
                        window.location.href = '/admin/addBanner';
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Failed to upload banner.',
                        customClass: {
                            container: 'swal2-container',
                            popup: 'swal2-popup',
                            title: 'swal2-title',
                            confirmButton: 'swal2-confirm',
                            cancelButton: 'swal2-cancel',
                        }
                    });
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Failed to upload banner.',
                    customClass: {
                        container: 'swal2-container',
                        popup: 'swal2-popup',
                        title: 'swal2-title',
                        confirmButton: 'swal2-confirm',
                        cancelButton: 'swal2-cancel',
                    }
                });
            }
        }
    }

    function displayErrorMessage(elementId, message) {
        const errorElement = document.getElementById(elementId);
        errorElement.innerText = message;
        errorElement.style.display = "block";
    }

    function clearErrorMessages() {
        const errorElements = document.getElementsByClassName('error-message');
        Array.from(errorElements).forEach(element => {
            element.innerText = '';
        });
    }


