    <script>
        
        async function confirmDeleteBanner(bannerId) {
          // Show SweetAlert confirmation
          Swal.fire({
            title: 'Are you sure?',
            text: 'You are about to remove this banner. This action cannot be undone.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes',
            cancelButtonText: 'Cancel',
          }).then(async (result) => {
            if (result.isConfirmed) {
              try {
                // Send a request to block the brand
                const response = await fetch(`/admin/deleteBanner?id=${bannerId}`, {
                  method: 'DELETE', // or 'GET', depending on your backend route
                });
              
                const result = await response.json(); // Parse the JSON response
              
                if (result.status) {
                  // Show success SweetAlert
                  Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: result.message, // Display the message from the backend
                  }).then(()=>{
                    window.location.href = "/admin/banner"
                  });
                } else {
                  // Show error SweetAlert
                  Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: result.message, // Display the error message from the backend
                  });
                }
              } catch (error) {
                console.error('Error deleting brand:', error);
                Swal.fire({
                  icon: 'error',
                  title: 'Error',
                  text: 'An error occurred while deleting the brand.',
                });
              }
            }
          });
        }

